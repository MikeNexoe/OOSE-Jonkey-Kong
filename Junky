sing UnityEngine;
using System.Collections;

public class Junky : MonoBehaviour {

	public float jump = 1.0f;
	public float distToGround;

	void Start () 
	{
		distToGround = collider.bounds.extents.y;
		jump = 200.0f;
	}

	//static bool Raycast(Vector3 )
	// Update is called once per frame
	void Update () 
	{
		Vector3 dwn = transform.TransformDirection (Vector3.down);
		if (Physics.Raycast (transform.position, dwn, 0.5f)) 
		{
			if (Input.GetKeyDown (KeyCode.Space))
				transform.rigidbody.AddForce (transform.up * jump); 
		}	
		if (Input.GetKey (KeyCode.A))
			transform.position -= new Vector3 (0.075f, 0, 0);
		if (Input.GetKey (KeyCode.D))
			transform.position += new Vector3 (0.075f, 0, 0);
		//+= jump * Vector3.up;

	}

	void OnCollisionEnter(Collision other)
	{
		if (other.gameObject.name == "Buff")
			jump = 275.0f;
	}
}
